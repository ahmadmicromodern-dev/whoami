# Environment Variables for Backend Integration
# متغیرهای محیطی برای یکپارچه‌سازی بک‌اند

# API Configuration
REACT_APP_API_BASE_URL=http://localhost:3001/api
REACT_APP_API_VERSION=v1
REACT_APP_API_TIMEOUT=10000

# Authentication
REACT_APP_AUTH_TOKEN_KEY=auth_token
REACT_APP_REFRESH_TOKEN_KEY=refresh_token

# Development/Production Environment
NODE_ENV=development

# Backend Server Configuration
REACT_APP_BACKEND_HOST=localhost
REACT_APP_BACKEND_PORT=3001
REACT_APP_BACKEND_PROTOCOL=http

# File Upload Configuration
REACT_APP_MAX_FILE_SIZE=5242880
REACT_APP_ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# Analytics (Optional)
REACT_APP_GOOGLE_ANALYTICS_ID=
REACT_APP_HOTJAR_ID=

# Social Media Integration (Optional)
REACT_APP_GITHUB_CLIENT_ID=
REACT_APP_LINKEDIN_CLIENT_ID=

# Email Service (Optional)
REACT_APP_EMAIL_SERVICE_URL=
REACT_APP_EMAIL_API_KEY=

# Database Configuration (if needed for direct connection)
REACT_APP_DB_HOST=
REACT_APP_DB_PORT=
REACT_APP_DB_NAME=
REACT_APP_DB_USER=
REACT_APP_DB_PASSWORD=

# Security
REACT_APP_ENCRYPTION_KEY=
REACT_APP_JWT_SECRET=

# Feature Flags
REACT_APP_ENABLE_ANALYTICS=false
REACT_APP_ENABLE_DEBUG_MODE=true
REACT_APP_ENABLE_OFFLINE_MODE=false
